{
  "name": "save-hooks",
  "main": "./lib/index.js",
  "version": "1.0.2",
  "author": "Mathias Beugnon <mathias@beugnon.fr>",
  "description": "Atom save hooks made easy",
  "repository": "https://github.com/oomathias/atom-save-hooks",
  "license": "MIT",
  "private": true,
  "scripts": {
    "publish": "apm publish",
    "lint": "prettier --check '**/*.{{c,le,sc}ss,g?(raph)ql,htm?(l),js?(on|on5|onl|x|s),md?(x|wn),m?(ark)down,mkdn,ts?(x),vue,y?(a)ml}'",
    "fix": "prettier --write '**/*.{{c,le,sc}ss,g?(raph)ql,htm?(l),js?(on|on5|onl|x|s),md?(x|wn),m?(ark)down,mkdn,ts?(x),vue,y?(a)ml}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "keywords": [
    "save",
    "command",
    "commands",
    "task",
    "tasks",
    "trigger",
    "watch",
    "watcher",
    "run",
    "hook",
    "execute",
    "autorun",
    "sync",
    "node",
    "npm",
    "yarn",
    "bin"
  ],
  "package-deps": [
    "busy-signal"
  ],
  "consumedServices": {
    "busy-signal": {
      "versions": {
        "1.0.0": "consumeSignal"
      }
    }
  },
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "printWidth": 100,
    "trailingComma": "es5",
    "singleQuote": true,
    "jsxSingleQuote": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid"
  },
  "importSort": {
    ".js": {
      "parser": "babylon",
      "style": "renke"
    }
  },
  "on-save": {
    "**/*.js": [
      "import-sort --write"
    ],
    "**/*.{{c,le,sc}ss,g?(raph)ql,htm?(l),js?(on|on5|onl|x|s),md?(x|wn),m?(ark)down,mkdn,ts?(x),vue,y?(a)ml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "atom-package-deps": "^5.1.0",
    "cosmiconfig": "^5.0.0",
    "debug": "^4.1.1",
    "execa": "^4.0.0",
    "lodash.debounce": "^4.0.8",
    "micromatch": "^4.0.2",
    "string-argv": "^0.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/node": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "husky": "^4.0.10",
    "import-sort-cli": "^6.0.0",
    "import-sort-parser-babylon": "^6.0.0",
    "import-sort-style-renke": "^6.0.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1"
  }
}
